@model AspNet_RssReader_WebUI.ViewModels.EditSourceViewModel

@{
    ViewBag.Title = "EditSource";
}

<h3>Edit Source</h3>
@using (Html.BeginForm("EditSource", "Source", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.LabelFor(m => m.Name)
        <div>
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>

        <div>
            @Html.LabelFor(m => m.Link)
            <div>
                @Html.TextBoxFor(m => m.Link)
                @Html.ValidationMessageFor(m => m.Link)
            </div>
        </div>

    <div>
        @Html.LabelFor(m => m.SelectedCategoryId)
        <div>
            @Html.DropDownListFor(m => m.SelectedCategoryId, Model.Categories)
        </div>
    </div>

    @Html.HiddenFor(x=>x.SourceId)

        <div>
            <input type="submit" value="Update" />
        </div>
}

