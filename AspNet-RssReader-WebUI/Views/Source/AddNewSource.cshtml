@model AspNet_RssReader_WebUI.ViewModels.AddSourceViewModel
@{
    ViewBag.Title = "AddNewSource";
}

    <h3>Add new source</h3>
    @using (Html.BeginForm("AddNewSource", "Source", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.LabelFor(m => m.Name)
            <div>
                @Html.TextBoxFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div>
            @Html.LabelFor(m => m.Link)
            <div>
                @Html.TextBoxFor(m => m.Link)
                @Html.ValidationMessageFor(m => m.Link)
            </div>
        </div>

        <div>
            @Html.LabelFor(m=>m.SelectedCategoryId)
            <div>
                @Html.DropDownListFor(m=>m.SelectedCategoryId, Model.Categories)
            </div>
        </div>

        <div>
            <input type="submit" value="Add"/>
        </div>
    }
