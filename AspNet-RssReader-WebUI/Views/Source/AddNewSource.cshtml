@model AspNet_RssReader_WebUI.ViewModels.AddSourceViewModel
@{
    ViewBag.Title = "AddNewSource";
}

<div class="editor full-width">
    <h3>Add new source</h3>
    @using (Html.BeginForm("AddNewSource", "Source", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "button full-width" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Link)
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Link, new { @class = "button full-width" })
                @Html.ValidationMessageFor(m => m.Link)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="button full-width blur" />
            </div>
        </div>
    }
</div>
