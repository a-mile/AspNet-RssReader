@model AspNet_RssReader_WebUI.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
</head>
<body>
    <div class="editor full-width login">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new {role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="center">Sign In</h4>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "button full-width" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "button full-width" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Log in" class="button full-width blur" />
                </div>
            </div>
            <p>
                @Html.ActionLink("Register as a new user", "Register",null, new { @class = "button full-width blur" })
            </p>
            @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                  @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
        }
    </div>
</body>
</html>
