@model AspNet_RssReader_WebUI.ViewModels.ArticlesListInfoViewModel

@{
    ViewBag.Title = "Articles list";
}

@if (Model != null)
{
    <div class="feed-buttons">
        @Html.ActionLink("Mark all as read", "MarkAllAsRead", "Article", new {sourceName = Model.SourceName}, new {@class = "button feed-button blur"})
        <div class="button feed-button blur sorting-dropdown">
            <div>Sorting</div>
            <div class="sorting-dropdown-content">
                @Html.ActionLink("Date ascending", "List", "Article", new {sourceName = Model.SourceName, sortOrder = "date_asc"}, new {@class = "button feed-button blur"})
                @Html.ActionLink("Date descending", "List", "Article", new {sourceName = Model.SourceName, sortingOrder = "date_desc"}, new {@class = "button feed-button blur"})
            </div>
        </div>       
    </div>

    <input type="hidden" id="sourceName" value="@if (Model.SourceName != null)
                                                {
                                                    @Model.SourceName
                                                }">

    <input type="hidden" id="sortOrder" value="@Model.SortOrder">
    <div id="feed">
    </div>

    <script src="~/Scripts/articleLoad.js"></script>
    <script src="~/Scripts/markArticleAsRead.js"></script>
}


