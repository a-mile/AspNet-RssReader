<!DOCTYPE html>
<html>

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width">
    @Styles.Render("~/Content/site.css")
    @Styles.Render("~/Content/font-awesome.min.css")
    @Scripts.Render("~/Scripts/jquery-1.10.2.min.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")    
</head>

<body>

    @{
        Html.RenderAction("Menu", "Nav");
        Html.RenderPartial("UpperBar");
    }

    <div id="content">
        @RenderBody()
    </div>

    <div id="modal">
        <div id="modal-content">
        </div>
    </div>

<script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].onclick = function () {
            this.nextElementSibling.classList.toggle("show");
        }
    }

    var arrows = document.getElementsByClassName("arrow");

    for (i = 0; i < arrows.length; i++) {
        arrows[i].onclick = function () {
            this.classList.toggle("arrow-down");
        }
    }

    var accarrows = document.getElementsByClassName("arrow");

    for (i = 0; i < accarrows.length; i++) {
        accarrows[i].onclick = function () {
            this.classList.toggle("arrow-down");
            this.nextElementSibling.classList.toggle("show");
        }
    }

    var modal = document.getElementById('modal');

    window.onclick = function (event) {
        if (event.target === modal) {
            modal.style.display = "none";
        }
    }

    function switchNav() {
        var sidenav = document.getElementById("sidenav");
        var button = document.getElementById("sidenavButton");
        if (sidenav.style.width === "300px") {
            sidenav.style.width = "";
            button.style.marginLeft = "0";
        }
        else {
            sidenav.style.width = "300px";
            button.style.marginLeft = "300px";
        }
    }

    function accountInfo() {
        var info = document.getElementsByClassName("account-info")[0];
        var button = document.getElementsByClassName("account-button")[0];
        info.classList.toggle("show");
        button.classList.toggle("account-button-down");
    }

    function showModal() {
        modal.style.display = "block";
    }
</script>
    

</body>
</html>
